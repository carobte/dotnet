@page
@model CrudsitoWeb.Pages.Add
@{
    ViewData["Title"] = "Add";
}

<div class="text-center my-5">
    <h1>Add new user</h1>
</div>

<form action="" method="POST" class="w-50 d-flex flex-column align-items-center mx-auto">
    <fieldset class="input-group my-3">
        <label for="id" class="input-group-text ">ID</label>
        <input name="id" type="text" class="form-control">
    </fieldset>
    <fieldset class="input-group my-3">
        <label for="name" class="input-group-text ">Name</label>
        <input name="name" type="text" class="form-control">
    </fieldset>
    <fieldset class="input-group my-3">
        <label for="last-name" class="input-group-text">Last Name</label>
        <input name="LastName" type="text" class="form-control">
    </fieldset>
    <fieldset class="input-group my-3">
        <label for="phone-number" class="input-group-text">Phone Number</label>
        <input name="phone-number" type="text" class="form-control">
    </fieldset>
    <button type="submit" class="btn btn-primary my-5">Add new user</button>
</form>